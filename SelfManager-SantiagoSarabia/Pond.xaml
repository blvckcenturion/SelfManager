        <Button x:Name="PondtBtn" Content="Modificar Ponderacion" HorizontalAlignment="Left" Margin="277,483,0,0" VerticalAlignment="Top" Height="60" Width="170" BorderBrush="#FFEA2D1F" Background="{x:Null}" Foreground="#FFEA2D1F" Click="AddAssignature_Click"/>
        <TextBlock x:Name="errorMsg" HorizontalAlignment="Left" Margin="172,405,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="364" Foreground="Black" TextAlignment="Center" FontFamily="Poppins" FontSize="20"><Run/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
